{
  "builds": [
    {
      "src": "package.json",     // Entry point for build (or you can specify "vite.config.js")
      "use": "@vercel/node"      // This will tell Vercel to use a Node.js builder (if using React, Vue, etc.)
    }
  ],
  "outputDirectory": "dist",   // Output the build to the dist directory
  "cleanUrls": true             // Optionally, clean URLs without `.html` extensions
}
